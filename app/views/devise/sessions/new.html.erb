<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <h4 class="col-md-2">Email</h4>
    <%= f.email_field :email, class: "col-md-6 styled-input", autofocus: true %>
  </div>

  <div class="form-group">
    <h4 class="col-md-2">Password</h4>
    <%= f.password_field :password, class: "col-md-6 styled-input", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <h4 class="col-md-2">Remember me</h4>
      <%= f.check_box :remember_me %>
    </div>
  <% end -%>

  <div class="form-group">
    <%= f.submit "Log in", class: "btn btn-success outline" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
