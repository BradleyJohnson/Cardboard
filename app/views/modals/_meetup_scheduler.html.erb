<div class="modal fade" id="meetupSchedulerModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4>Schedule a meetup</h4>
      </div>
      <div class="modal-body">

        <div id="meetup-form-div">
          <%= form_for @meetup, html: {class: "form-horizontal"} do |f| %>

            <%= f.hidden_field :group_id, :value => @group.id %>

            <div class="form-group">
              <%= f.label "Where", class: "col-md-3" %>
              <%= f.text_field :location_string, class: "col-md-8", placeholder: "e.g. 'Muddy's Coffee House'" %>
            </div>

            <div class="form-group">
              <%= f.label "Address", class: "col-md-3" %>
              <%= f.text_field :location_address, class: "col-md-8", placeholder: "e.g. '1304 Valencia St San Francisco, CA 94110'" %>
            </div>

            <div class="form-group">
              <%= f.label "Date", class: "col-md-3" %>
              <%= f.date_field :meetup_date, class: "col-md-8" %>
            </div>

            <div class="form-group">
              <%= f.label "Start Time", class: "col-md-3" %>
              <%= f.time_field :start_time, class: "col-md-8" %>
            </div>

            <div class="form-group">
              <%= f.label "End Time", class: "col-md-3" %>
              <%= f.time_field :end_time, class: "col-md-8" %>
            </div>

            <div class="form-group">
              <%= f.label "Notes", class: "col-md-3" %>
              <%= f.text_area :meetup_notes, class: "col-md-8" %>
            </div>

            <div class="form-group">
              <%= f.submit class: "btn btn-primary outline col-sm-offset-1" %>
              <%= link_to "Cancel", admin_path, class: "btn btn-primary outline" %>
            </div>

          <% end %>
        </div>

      </div>
    </div>
  </div>
</div>
