<div class="modal fade" id="directMessageModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4>New Message</h4>
      </div>
      <div class="modal-body">
        <%= form_for @message, html: {class: "form-horizontal"} do |f| %>

            <%= f.hidden_field :sender_username, value: current_user.username %>
          <div class="form-group">
            <%= f.label "To:", class: "col-sm-1" %>
            <%= f.text_field :recipient_username, class: "col-sm-9 col-sm-offset-1" %>
          </div>
          <div class="form-group">
            <%= f.label "Subject:", class: "col-sm-1" %>
            <%= f.text_field :title, class: "col-sm-9 col-sm-offset-1" %>
          </div>
          <div class="form-group">
            <%= f.label "Body:", class: "col-sm-1" %>
            <%= f.text_area :body, class: "col-sm-9 col-sm-offset-1" %>
          </div>

          <div class="form-group">
            <%= f.submit "Send Message", class: "btn btn-info col-sm-offset-2" %>
            <%= link_to "Cancel", messages_path, class: "btn btn-default" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
