<h1>Private Messages</h1>
<a href="#myModal" role=button class="btn btn-success" data-toggle="modal">
  Compose Message
</a>

<div class="modal fade" id="myModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4>Modal Title</h4>
      </div>
      <div class="modal-body">
        <%= form_for @message, html: {class: "form-horizontal"} do |f| %>

          <%#= render partial: "shared/errors", locals: {error_var: @project} %>


            <%= f.hidden_field :sender_username, value: current_user.username %>
          <div class="form-group">
            <%= f.label "Addressee", class: "col-sm-1" %>
            <%= f.text_field :recipient_username, class: "col-sm-9 col-sm-offset-1" %>
          </div>
          <div class="form-group">
            <%= f.label "Subject", class: "col-sm-1" %>
            <%= f.text_field :title, class: "col-sm-9 col-sm-offset-1" %>
          </div>
          <div class="form-group">
            <%= f.label "Body", class: "col-sm-1" %>
            <%= f.text_area :body, class: "col-sm-9 col-sm-offset-1" %>
          </div>

          <div class="form-group">
            <%= f.submit class: "btn btn-info col-sm-offset-2" %>
            <%= link_to "Cancel", messages_path, class: "btn btn-default" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>



<% if @messages %>
  <% @messages.each do |msg| %>
    <div class="panel panel-default">
      <div class="panel-heading">
        <strong><%= msg.title %></strong>
      </div>
      <div class="panel-body">
        <p><%= msg.body %></p>
      </div>
    </div>
  <% end %>
<% end %>
