<a href="#directMessageModal" role=button class="btn btn-primary outline" data-toggle="modal">Compose Message</a>

<hr>
<%= render partial: "modals/direct_message_modal" %>

<% if @messages %>
  <% @messages.each do |msg| %>
    <div class="well">
      <h3><%= msg.sender_username %></h3>
      <p ><%= msg.title %></p>
      <hr>
      <p ><%= msg.body %></p>
    </div>
  <% end %>
<% end %>
