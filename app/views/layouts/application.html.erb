<!DOCTYPE html>
<html>
<head>
  <title>Board Boss</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">

    <h1 id="board-logo">Board Boss</h1>

    <div class="row">
      <div class="col-sm-3">
        <div class="sidebar-nav">
          <div class="navbar navbar-default" role="navigation">
            <div class="navbar-header">
              <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
              </button>
              <span class="visible-xs navbar-brand">Sidebar menu</span>
            </div>
            <div class="navbar-collapse collapse sidebar-navbar-collapse">
              <ul class="nav navbar-nav">
                <li class="active">
                  <a href="#"><span class="glyphicon glyphicon-dashboard" aria-hidden="true"></span> Dashboard</a>
                </li>
                <li><a href="#"><span class="glyphicon glyphicon-knight" aria-hidden="true"></span> My Collection</a></li>
                <li><a href="#"><span class="glyphicon glyphicon-envelope" aria-hidden="true"></span> Inbox <span class="badge">1,118</span></a></li>
                <li><a href="#"><span class="glyphicon glyphicon-calendar" aria-hidden="true"></span> Calendar</a></li>
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span> Groups <b class="caret"></b></a>
                  <ul class="dropdown-menu">
                    <li><a href="#">My Groups</a></li>
                    <li><a href="/groups">Find a Group</a></li>
                    <li><a href="/groups/new">Found a Group</a></li>
                    <li class="divider"></li>
                    <li class="dropdown-header">Nav header</li>
                    <li><a href="#">Separated link</a></li>
                    <li><a href="#">One more separated link</a></li>
                  </ul>
                </li>
                <li><a href="#"><span class="glyphicon glyphicon-cog" aria-hidden="true"></span> Account</a></li>
                <% if current_user %>
                  <li>
                    <%= link_to "<span class=\"glyphicon glyphicon-log-out\" aria-hidden=\"true\"></span> Log Out".html_safe, destroy_user_session_path, method: :delete %>
                  </li>
                <% end %>
              </ul>
            </div><!--/.nav-collapse -->
          </div>
        </div>
      </div>
      <div class="col-sm-9 well">
        <% if notice || alert %>
          <p class="notice"><%= notice %></p>
          <p class="alert"><%= alert %></p>
        <% end %>

        <%= yield %>

        <% if current_user %>
          <p class="text-muted">Logged in as: <%= current_user.username %></p>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>
